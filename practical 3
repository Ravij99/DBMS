PRACTICAL-3
1.
UPDATE PRODUCT SET PRICE = 2000 WHERE PRICE=1500;
2.
UPDATE CUSTOMER SET CREDIT_LIMIT= 8000 WHERE ADDRESS = 'GRANGE';
3.
ALTER TABLE CUSTOMER MODIFY ADDRESS VARCHAR(30);
4.
CREATE TABLE CUST1 AS (SELECT CUSTOMER_NO,NAME,ADDRESS FROM CUSTOMER);
5.
ALTER TABLE CUST1 ADD EMAIL_ID VARCHAR(20);
6.
DESC CUST1;
7.
SELECT *FROM CUST1;
8.
DELETE FROM CUST1 WHERE CUSTOMER_NO = 20;
9.
ALTER TABLE CUST1 DROP COLUMN EMAIL_ID;
10.
TRUNCATE TABLE CUST1;
SELECT *FROM CUST1;
11.
DROP TABLE CUST1;
SELECT *FROM CUST1;
